  }

  function removeWord(event) {
    const id = event.path[1].id;
    const xhr = new XMLHttpRequest();
    xhr.open('GET', '/words/delete/' + id, true);
    xhr.onload = function() {
      if (xhr.status == 200) {
        updateWords();
      } else {
        showAlert(xhr.status, xhr.responseText);
      }
    }
    xhr.send();
  }