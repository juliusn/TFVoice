extends layout

block content
  div.container-narrow
    div.row
      div.col-md-3
      div.col-md-6
        div.cardx
          div.card-body
            h5#recording-title.card-title Recording:
            p#recording-text.card-text
        div#recording
        div#vis
        div#status
        link(rel='stylesheet', href='/stylesheets/bubbles-reset.css')
        link(rel='stylesheet', href='/stylesheets/bubbles-style.css')
        script.
          const recording = !{JSON.stringify(recording)};
          const result = !{JSON.stringify(result)};
          const recTitle = document.getElementById('recording-title');
          recTitle.innerHTML = 'Recording ' + new Date(recording.date).toGMTString();
          const recElement = document.getElementById('recording-text');
          recElement.innerHTML = recording.text;
        script(type='text/javascript', src='/javascripts/bubbles/plugins.js')
        script(type='text/javascript', src='/javascripts/coffee-script.js')
        script(type='text/javascript', src='/javascripts/d3.min.js')
        script(type='text/coffeescript', src='/javascripts/bubbles/coffee/vis.coffee')
      div.col-md-3